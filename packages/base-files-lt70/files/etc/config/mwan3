config globals 'globals'
	option mmx_mask '0x3F00'

config interface 'wan'
	option family 'ipv4'
	option initial_state 'online'
	option track_method 'ping'
	option count '1'
	option size '56'
	option max_ttl '60'
	option check_quality '0'
	option timeout '4'
	option interval '10'
	option failure_interval '5'
	option recovery_interval '5'
	option enabled '0'
	option reliability '1'
	option up '1'
	option down '3'
	list track_ip '8.8.8.8'
	list track_ip '1.1.1.1'

config interface 'internet'
	option initial_state 'online'
	option family 'ipv4'
	list track_ip '8.8.8.8'
	list track_ip '1.1.1.1'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option check_quality '0'
	option timeout '4'
	option enabled '0'
	option down '3'
	option up '1'
	option interval '30'
	option failure_interval '10'
	option recovery_interval '10'

config member 'wan_m1_w3'
	option interface 'wan'
	option metric '1'
	option weight '3'

config member 'wan_m2_w3'
	option interface 'wan'
	option metric '2'
	option weight '3'

config member 'internet_m1_w3'
	option interface 'internet'
	option metric '1'
	option weight '3'

config member 'internet_m2_w3'
	option interface 'internet'
	option metric '2'
	option weight '3'


config policy 'wan_only'
	list use_member 'wan_m1_w3'
	option last_resort 'unreachable'

config policy 'mobile_only'
	list use_member 'internet_m1_w3'
	option last_resort 'unreachable'

config policy 'balanced'
	list use_member 'wan_m1_w3'
	list use_member 'internet_m1_w3'
	option last_resort 'unreachable'

config policy 'wan_prefer'
	list use_member 'wan_m1_w3'
	list use_member 'internet_m2_w3'
	option last_resort 'unreachable'

config policy 'mobile_prefer'
	list use_member 'internet_m1_w3'
	list use_member 'wan_m2_w3'
	option last_resort 'unreachable'

config rule 'default_rule'
	option dest_ip '0.0.0.0/0'
	option family 'ipv4'
	option proto 'all'
	option sticky '0'
	option use_policy 'wan_prefer'
