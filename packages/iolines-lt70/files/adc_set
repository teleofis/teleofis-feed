#!/bin/sh

ADC=$1
PIN=$2
STATE=$3

if [[ "$PIN" == "pu" ]]; then
	[[ "$STATE" == "0" ]] && STATE=1 || STATE=0
	i2ctransfer -f -y 0 w4@0x11 0x00 0x00 0x03 0x0$ADC && i2ctransfer -f -y 0 w4@0x11 0x00 0x00 0x00 0x0$STATE
else
	i2ctransfer -f -y 0 w4@0x11 0x00 0x00 0x04 0x0$ADC && i2ctransfer -f -y 0 w4@0x11 0x00 0x00 0x00 0x0$STATE
fi

exit 0
